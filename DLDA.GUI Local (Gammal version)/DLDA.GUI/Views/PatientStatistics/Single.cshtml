@model DLDA.GUI.DTOs.PatientSingleSummaryDto

@{
    ViewData["Title"] = "Egenbedömning – sammanställning";

    var utanProblem = Model.Answers.Count(a => a.Answer is 0 or 1);
    var vissProblematik = Model.Answers.Count(a => a.Answer is 2 or 3);
    var hoppadeÖver = Model.Answers.Count(a => a.Answer == null);
    var total = utanProblem + vissProblematik + hoppadeÖver;

    var utanProblemProcent = total > 0 ? Math.Round(utanProblem * 100.0 / total, 1) : 0;
    var vissProblemProcent = total > 0 ? Math.Round(vissProblematik * 100.0 / total, 1) : 0;
    var hoppadeProcent = total > 0 ? Math.Round(hoppadeÖver * 100.0 / total, 1) : 0;

    var bästaOmråden = Model.Answers
        .Where(a => a.Answer is 0 or 1)
        .OrderBy(a => a.Answer)
        .Take(5)
        .Select(a => a.QuestionText)
        .ToList();
}

<div class="mt-5">
    <a class="btn btn-secondary" asp-controller="PatientAssessment" asp-action="Index">
        ⬅ Tillbaka till mina bedömningar
    </a>
</div>

<div class="container mt-5">

@* Alert-meddelanden *@
@if (TempData["Success"] != null)
{
        <div class="alert alert-success d-flex align-items-center justify-content-center" role="alert">
            <span class="me-2">✅</span>
            <div>@TempData["Success"]</div>
        </div>
}
@if (TempData["Error"] != null)
{
        <div class="alert alert-danger d-flex align-items-center justify-content-center" role="alert">
            <span class="me-2">❌</span>
            <div>@TempData["Error"]</div>
        </div>
}

<div class="container mt-5">
    <h2 class="mb-4">🟢 Sammanställning av egenbedömning</h2>
    <p><strong>Datum:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <canvas id="resultPie"></canvas>
        </div>

        <div class="col-md-6">
            <h5 class="mb-3">📝 Återkoppling</h5>
            <ul>
                <li><strong>@utanProblem</strong> frågor markerades som <span class="text-success">utan problem</span>.</li>
                <li><strong>@vissProblematik</strong> frågor skattades som <span class="text-warning">viss problematik</span>.</li>
                <li><strong>@hoppadeÖver</strong> frågor <span class="text-muted">hoppades över</span>.</li>
            </ul>

            <div class="mt-3">
                @if (utanProblemProcent >= 70)
                {
                    <p class="alert alert-success">
                        Din egenbedömning visar att de flesta områden fungerar bra för dig.
                    </p>
                }
                else if (utanProblemProcent >= 40)
                {
                    <p class="alert alert-info">
                        Det finns flera områden som fungerar bra för dig.
                    </p>
                }
                else
                {
                    <p class="alert alert-secondary">
                        Bedömningen visar att du identifierar flera områden som kan behöva stöd – det är ett viktigt steg mot förbättring.
                    </p>
                }
            </div>

            @if (bästaOmråden.Any())
            {
                <div class="mt-4">
                    <h6>✅ Områden du skattade som fungerande</h6>
                    <ul>
                        @foreach (var fråga in bästaOmråden)
                        {
                            <li>@fråga</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

    <div class="mt-5">
        <a class="btn btn-secondary" asp-controller="PatientAssessment" asp-action="Index">
            ⬅ Tillbaka till mina bedömningar
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <script>
        const ctx = document.getElementById('resultPie');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: [
                    'Utan problem (0–1)',
                    'Viss problematik (2–3)',
                    'Hoppad över'
                ],
                datasets: [{
                    data: [@utanProblem, @vissProblematik, @hoppadeÖver],
                    backgroundColor: ['#198754', '#ffc107', '#dee2e6'],
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                        callbacks: {
                            label: function (ctx) {
                                const label = ctx.label || '';
                                const value = ctx.parsed || 0;
                                return `${label}: ${value} frågor`;
                            }
                        }
                    },
                    datalabels: {
                        color: '#000',
                        font: {
                            weight: 'bold',
                            size: 16 // 🔠 större text i procent
                        },
                        formatter: (value, ctx) => {
                            const total = ctx.chart.data.datasets[0].data.reduce((a, b) => a + b, 0);
                            if (total === 0 || value === 0) return '';
                            const percent = Math.round((value / total) * 100);
                            return `${percent}%`;
                        }
                    }
                }
            },
            plugins: [ChartDataLabels]
        });
    </script>
}
