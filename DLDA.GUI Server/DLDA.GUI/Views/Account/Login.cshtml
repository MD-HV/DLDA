@model DLDA.GUI.DTOs.LoginDto
@{
    ViewData["Title"] = "Logga in";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-5">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Logga in till DLDA</h4>
            </div>
            <div class="card-body">

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Användarnamn</label>
                        <input asp-for="Username" class="form-control" placeholder="Ange ditt användarnamn" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Lösenord</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Logga in</button>
                </form>
            </div>
        </div>
    </div>
</div>
