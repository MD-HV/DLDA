@using DLDA.GUI.DTOs.Authentication
@model LoginDto
@{
    ViewData["Title"] = "Logga in";
}

<link rel="stylesheet" href="~/css/Account.css" />

<div class="login-container">
    <div class="login-box">
        <!-- Avatar-ikon -->
        <div class="login-avatar">
            <i class="fas fa-user-circle"></i>
        </div>

        <!-- Rubrik och text -->
        <h2 class="text-center mb-2">LOGIN</h2>
        <p class="text-center text-muted mb-4">Logga in med dina uppgifter</p>

        <form asp-action="Login" method="post">
            <!-- användarnamn -->
            <div class="form-group mb-3">
                <div class="input-with-icon">
                    <i class="fas fa-user icon-left"></i>
                    <input asp-for="Username" class="form-control" placeholder="Användarnamn" />
                </div>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <!-- Lösenord -->
            <div class="form-group mb-3">
                <div class="input-with-icon">
                    <i class="fas fa-lock icon-left"></i>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Lösenord" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Kom ihåg mig -->
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">Kom ihåg mig</label>
            </div>

            <!-- Logga in knapp -->
            <button type="submit" class="btn btn-primary w-100 mb-3">Logga in </button>

            <!-- Glömt lösenord -->
            <p class="text-center small">
                <a href="#">Glömt lösenord?</a>
            </p>
        </form>
    </div>
</div>