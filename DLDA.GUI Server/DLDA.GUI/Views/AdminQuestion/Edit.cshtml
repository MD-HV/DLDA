@using DLDA.GUI.DTOs.Question
@model Question

@{
    ViewData["Title"] = "Redigera fråga";
}


<link rel="stylesheet" href="~/css/adminquestion.css" asp-append-version="true" />


<div class="container mt-5">
    <h2 class="mb-4">✏ Redigera fråga</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="question-panel">
        <form asp-action="Edit" asp-route-id="@Model.QuestionID" method="post">
            <input type="hidden" asp-for="QuestionID" />

            <div class="mb-3 text-start">
                <label asp-for="QuestionText" class="form-label">Frågetext</label>
                <input asp-for="QuestionText" class="form-control" />
            </div>

            <div class="mb-3 text-start">
                <label asp-for="Category" class="form-label">Kategori</label>
                <input asp-for="Category" class="form-control" />
            </div>

            <div class="form-check mb-3 text-start">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Aktiv</label>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary">💾 Spara ändringar</button>
                <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
            </div>
        </form>
    </div>
</div>