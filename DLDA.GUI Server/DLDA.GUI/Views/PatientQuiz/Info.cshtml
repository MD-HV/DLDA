@{
    ViewData["Title"] = "Information";
    var assessmentId = ViewBag.AssessmentId as int? ?? 0;
    var hasStarted = ViewBag.HasStarted as bool? ?? false;
}

<div class="container mt-5 text-center">
    <h1 class="display-4">DLDA</h1>
    <h4 class="mb-4">Hur jag upplever min funktion i vardagen</h4>

    <img src="~/Images/dlda_intro.png" class="img-fluid mb-3" style="max-width: 280px;" />

    <h5 class="mt-4">Vad handlar bedömningen om?</h5>

    <div style="border: 2px solid #198754; padding: 1rem; border-radius: 12px; max-width: 600px; margin: 0 auto; background-color: #f8f9fa;">
        <p class="lead mb-0">
            Frågorna handlar om din vardag. När du svarat kommer personalen att kunna prata med dig om hur stödet kan planeras på bästa sätt.<br />
            Känn dig fri att hoppa över frågor som känns svåra att svara på.
        </p>
    </div>

    <!-- Knappar nedflyttade och högerställda -->
    <div class="d-flex justify-content-end mt-5" style="max-width: 600px; margin: 0 auto;">
        <form method="get" asp-controller="PatientQuiz" asp-action="@(hasStarted ? "Resume" : "ScaleSelect")" class="me-2">
            <input type="hidden" name="id" value="@assessmentId" />
            <button type="submit" class="btn btn-success">
                @(hasStarted ? "▶ Fortsätt bedömning" : "🚀 Starta bedömning")
            </button>
        </form>

        <a class="btn btn-outline-secondary" asp-controller="PatientAssessment" asp-action="Index">
            🔙 Tillbaka till mina bedömningar
        </a>
    </div>
</div>
