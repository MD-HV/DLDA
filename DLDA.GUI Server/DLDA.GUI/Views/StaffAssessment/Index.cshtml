@using DLDA.GUI.DTOs.Assessment
@using DLDA.GUI.DTOs.Patient
@model List<PatientWithLatestAssessmentDto>

@{
    ViewData["Title"] = "Patientlista";
}

<div class="container mt-5">
    <h2 class="mb-4">👥 Patientlista</h2>

    <!-- 🔍 Sökformulär -->
    <form method="get" asp-action="Index" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="🔍 Sök patient..." value="@Context.Request.Query["search"]" />
            <button type="submit" class="btn btn-outline-secondary">Sök</button>
        </div>
    </form>

    @if (Model.Any())
    {
        <div class="list-group shadow-sm">
            @foreach (var patient in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">👤 <strong>@patient.Username</strong></h5>

                        @if (patient.LastAssessmentDate.HasValue)
                        {
                            <p class="mb-1 text-muted">
                                📅 Senaste bedömning: <strong>@patient.LastAssessmentDate?.ToString("yyyy-MM-dd")</strong>
                            </p>
                        }
                        else
                        {
                            <p class="mb-1 text-muted">📅 <em>Ingen bedömning har genomförts ännu.</em></p>
                        }
                    </div>

                    <a asp-controller="StaffAssessment"
                       asp-action="Assessments"
                       asp-route-userId="@patient.UserID"
                       class="btn btn-outline-primary btn-sm"
                       aria-label="Gå till bedömningar för @patient.Username">
                        📄 Gå till bedömningar
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4" role="alert">
            ❗ Inga patienter matchade din sökning.
        </div>
    }
</div>
