@using DLDA.GUI.DTOs.Assessment
@using DLDA.GUI.DTOs.User
@model List<PatientWithAssessmentStatusDto>


@{
    ViewData["Title"] = "Patientlista";
}

<div class="container mt-5">
    <h2 class="mb-4">👥 Patientlista</h2>

    <div class="row">
        <!-- 🔍 Vänsterspalt med filter -->
        <div class="col-md-4">
            <div class="border rounded p-3 bg-light shadow-sm">
                <h5 class="mb-3">🧪 Filtrera patienter</h5>

                <form method="get" asp-action="Index">
                    <!-- Sökfält -->
                    <div class="mb-3">
                        <label for="search" class="form-label">🔍 Sökfält</label>
                        <input type="text" name="search" id="search" class="form-control" placeholder="Skriv användarnamn..." value="@Context.Request.Query["search"]" />
                    </div>

                    <!-- Pågående bedömning -->
                    <div class="mb-3">
                        <label class="form-label">📌 Pågående bedömning?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="ongoing" value="true" id="ongoing" @(Context.Request.Query["ongoing"] == "true" ? "checked" : "") />
                            <label class="form-check-label" for="ongoing">Ja</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="notOngoing" value="true" id="notOngoing" @(Context.Request.Query["notOngoing"] == "true" ? "checked" : "") />
                            <label class="form-check-label" for="notOngoing">Nej</label>
                        </div>
                    </div>

                    <!-- Senast bedömning -->
                    <div class="mb-3">
                        <label class="form-label">🕒 Senast bedömning</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="recent" value="week" id="recentWeek" @(Context.Request.Query["recent"] == "week" ? "checked" : "") />
                            <label class="form-check-label" for="recentWeek">Senaste veckan</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="recent" value="month" id="recentMonth" @(Context.Request.Query["recent"] == "month" ? "checked" : "") />
                            <label class="form-check-label" for="recentMonth">Senaste månaden</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="recent" value="older" id="recentOlder" @(Context.Request.Query["recent"] == "older" ? "checked" : "") />
                            <label class="form-check-label" for="recentOlder">Äldre</label>
                        </div>
                    </div>

                    <!-- Sök och rensa -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-outline-primary w-100">Sök</button>
                        <button type="button" onclick="clearSearch()" class="btn btn-outline-secondary w-100">Rensa</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- 📋 Högerkolumn med patientlistan -->
        <div class="col-md-8">
            @if (Model.Any())
            {
                <div class="list-group shadow-sm">
                    @foreach (var patient in Model)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-1">👤 <strong>@patient.Username</strong></h5>

                                @if (patient.LastAssessmentDate.HasValue)
                                {
                                    <p class="mb-1 text-muted">
                                        📅 Senaste bedömning: <strong>@patient.LastAssessmentDate?.ToString("yyyy-MM-dd")</strong>
                                    </p>
                                }
                                else
                                {
                                    <p class="mb-1 text-muted">📅 <em>Ingen bedömning har genomförts ännu.</em></p>
                                }
                            </div>

                            <a asp-controller="StaffAssessment"
                               asp-action="Assessments"
                               asp-route-userId="@patient.UserID"
                               class="btn btn-outline-primary btn-sm"
                               aria-label="Gå till bedömningar för @patient.Username">
                                📄 Gå till bedömningar
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning mt-4" role="alert">
                    ❗ Inga patienter matchade din sökning.
                </div>
            }

            <!-- Skapa ny patient-knapp -->
            <div class="mt-4">
                <a asp-controller="AdminUser" asp-action="Create" class="btn btn-success w-100">
                    ➕ Skapa ny patient
                </a>
                <div class="form-text text-muted mt-2">
                    ⚠ För att skapa en ny användare måste du vara inloggad som administratör.
                    <br />Om du klickar på knappen loggas du ut från nuvarande session.
                </div>
            </div>

        </div>
    </div>
</div>
