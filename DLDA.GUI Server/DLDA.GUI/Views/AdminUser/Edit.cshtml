@model DLDA.GUI.DTOs.UserDto

@{
    ViewData["Title"] = "Redigera användare";
}

<div class="container mt-5">
    <h2 class="mb-4">✏️ Redigera användare</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="UserID" />

        <div class="mb-3">
            <label asp-for="Username" class="form-label">Användarnamn</label>
            <input asp-for="Username" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-post</label>
            <input asp-for="Email" class="form-control" type="email" />
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">Roll</label>
            <select asp-for="Role" class="form-select">
                <option value="admin">Admin</option>
                <option value="staff">Personal</option>
                <option value="patient">Patient</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Nytt lösenord (valfritt)</label>
            <input asp-for="Password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">💾 Spara ändringar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Avbryt</a>
    </form>
</div>
