@using DLDA.GUI.DTOs.Question
@model Question

@{
    ViewData["Title"] = "Bekräfta borttagning";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">🗑️ Bekräfta borttagning</h2>

    <p>Är du säker på att du vill ta bort följande fråga?</p>

    <ul>
        <li><strong>Frågetext:</strong> @Model.QuestionText</li>
        <li><strong>Kategori:</strong> @Model.Category</li>
        <li><strong>Aktiv:</strong> @(Model.IsActive ? "✅" : "❌")</li>
    </ul>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.QuestionID" method="post">
        <button type="submit" class="btn btn-danger">🗑 Ta bort</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Avbryt</a>
    </form>
</div>
