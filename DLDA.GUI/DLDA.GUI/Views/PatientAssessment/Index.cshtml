@model List<DLDA.GUI.DTOs.AssessmentDto>
@{
    ViewData["Title"] = "Mina bedömningar";
}

<div class="container mt-5">
    <h2 class="mb-4">Mina bedömningar</h2>

    @if (!Model.Any())
    {
        <p>Du har ännu inte påbörjat någon bedömning.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Datum</th>
                    <th>Skattningsskala</th>
                    <th>Status</th>
                    <th>Åtgärd</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AssessmentID</td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                        <td>@item.ScaleType</td>
                        <td>
                            @if (item.IsComplete)
                            {
                                <span class="text-success fw-semibold">Klar</span>
                            }
                            else
                            {
                                <span class="text-warning fw-semibold">
                                    Pågående – @item.AnsweredCount av @item.TotalQuestions frågor
                                </span>
                            }
                        </td>
                        <td>
                            @if (!item.IsComplete)
                            {
                                if (item.HasStarted)
                                {
                                    <a class="btn btn-sm btn-warning"
                                       asp-controller="PatientQuiz"
                                       asp-action="Info"
                                       asp-route-id="@item.AssessmentID">Fortsätt</a>
                                }
                                else
                                {
                                    <a class="btn btn-sm btn-primary"
                                       asp-controller="PatientQuiz"
                                       asp-action="Info"
                                       asp-route-id="@item.AssessmentID">Starta</a>
                                }
                            }
                            else
                            {
                                <a class="btn btn-sm btn-info"
                                   asp-controller="PatientResult"
                                   asp-action="Index"
                                   asp-route-assessmentId="@item.AssessmentID">Visa</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
