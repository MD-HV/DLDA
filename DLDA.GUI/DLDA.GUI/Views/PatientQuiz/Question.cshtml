@model DLDA.GUI.DTOs.QuestionDto
@{
    ViewData["Title"] = "Fråga";
    var assessmentId = ViewBag.AssessmentId as int? ?? 0;
    var scaleType = (Model.ScaleType ?? "Numerisk").ToLower();
    var prefix = scaleType == "smiley" ? "Smiley" : "Number";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <small class="text-muted">Kategori: @Model.Category</small>
        <small class="text-muted">Fråga @(@Model.Order + 1) av @Model.Total</small>
    </div>

    <div class="bg-white rounded p-4 shadow-sm mb-4 border-start border-4 border-primary">
        <h3 class="fw-bold mb-0">@Model.QuestionText</h3>
    </div>

    <form asp-action="SubmitAnswer" method="post">
        <input type="hidden" name="itemId" value="@Model.ItemID" />
        <input type="hidden" name="assessmentId" value="@assessmentId" />

        <div class="mb-4">
            <label class="form-label fw-semibold">Hur stort är problemet?</label>

            <div class="d-flex gap-3 flex-wrap">
                @for (int i = 0; i <= 4; i++)
                {
                    var inputId = $"a{i}";
                    var imagePath = Url.Content($"~/Images/{prefix} {i}.png");

                    <div class="form-check text-center">
                        <input type="radio" class="btn-check" name="answer" id="@inputId" value="@i" required />
                        <label class="btn" for="@inputId">
                            <img src="@imagePath" alt="@prefix @i" width="60" />
                            <div class="small mt-1">@i</div>
                        </label>
                    </div>
                }
            </div>
        </div>

        <div class="mb-4">
            <label for="comment" class="form-label">Kommentar (frivilligt)</label>
            <textarea class="form-control" name="comment" rows="3"></textarea>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary">💾 Nästa fråga</button>
        </div>
    </form>

    <!-- Separata formulärknappar utanför SubmitAnswer-formuläret -->
    <div class="d-flex gap-3 mt-3">
        <form asp-action="Previous" method="post">
            <input type="hidden" name="assessmentId" value="@assessmentId" />
            <input type="hidden" name="currentOrder" value="@Model.Order" />
            <button type="submit" class="btn btn-outline-secondary">⬅ Föregående</button>
        </form>

        <form asp-action="SkipQuestion" method="post">
            <input type="hidden" name="itemId" value="@Model.ItemID" />
            <input type="hidden" name="assessmentId" value="@assessmentId" />
            <button type="submit" class="btn btn-secondary">⏭ Hoppa över</button>
        </form>

        <form asp-action="Pause" method="post">
            <input type="hidden" name="assessmentId" value="@assessmentId" />
            <button type="submit" class="btn btn-outline-warning">⏸ Pausa</button>
        </form>

        <form asp-action="ScaleSelect" asp-route-id="@assessmentId" method="get">
            <button type="submit" class="btn btn-outline-info">🔁 Byt skattningsskala</button>
        </form>
    </div>
</div>
