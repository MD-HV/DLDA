@model List<DLDA.GUI.DTOs.PatientWithLatestAssessmentDto>
@{
    ViewData["Title"] = "Patientlista";
}

<div class="container mt-5">
    <h2 class="mb-4">Patientlista</h2>

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var patient in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">👤 <strong>Användarnamn: @patient.Username</strong></h5>
                        @if (patient.LastAssessmentDate.HasValue)
                        {
                            <p class="mb-1 text-muted">
                                📅 Senaste bedömning:
                                <strong>@patient.LastAssessmentDate.Value.ToString("yyyy-MM-dd")</strong>
                            </p>
                        }
                        else
                        {
                            <p class="mb-1 text-muted">
                                📅 <em>Ingen bedömning har genomförts ännu.</em>
                            </p>
                        }
                    </div>
                    <a asp-controller="StaffQuiz"
                       asp-action="Assessments"
                       asp-route-userId="@patient.UserID"
                       class="btn btn-outline-primary btn-sm"
                       aria-label="Gå till bedömningar för @patient.Username">
                        Gå till bedömningar
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3" role="alert">
            Inga patienter hittades.
        </div>
    }
</div>
