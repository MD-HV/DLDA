@model DLDA.GUI.DTOs.AssessmentDto
@{
    ViewData["Title"] = "Bekräfta borttagning";
}

<div class="container mt-5">
    <h3 class="text-danger">🗑️ Bekräfta borttagning</h3>
    <p>Är du säker på att du vill ta bort denna bedömning? Detta kan inte ångras.</p>

    <ul>
        <li><strong>ID:</strong> @Model.AssessmentID</li>
        <li><strong>Skattningsskala:</strong> @Model.ScaleType</li>
        <li><strong>Skapad:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</li>
    </ul>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.AssessmentID" />
        <input type="hidden" name="userId" value="@Model.UserId" />
        <button type="submit" class="btn btn-danger">🗑 Ja, ta bort</button>
        <a asp-controller="StaffQuiz" asp-action="Assessments" asp-route-userId="@Model.UserId" class="btn btn-secondary ms-2">Avbryt</a>
    </form>
</div>
