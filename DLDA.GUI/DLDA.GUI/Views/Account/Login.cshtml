@model DLDA.GUI.DTOs.LoginDto

@{
    ViewData["Title"] = "Logga in";
}

<h2>Logga in</h2>

<form asp-action="Login" method="post" class="form">
    <div class="form-group">
        <label asp-for="Username">Användarnamn</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Lösenord</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    @if (ViewData["LoginError"] != null)
    {
        <div class="alert alert-danger">@ViewData["LoginError"]</div>
    }

    <button type="submit" class="btn btn-primary">Logga in</button>
</form>
