@using DLDA.GUI.DTOs.User
@model UserDto

@{
    ViewData["Title"] = "Skapa användare";
}

<div class="container mt-5">
    <h2 class="mb-4">➕ Skapa ny användare</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Username" class="form-label">Användarnamn</label>
            <input asp-for="Username" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-post</label>
            <input asp-for="Email" class="form-control" type="email" />
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">Roll</label>
            <select asp-for="Role" class="form-select">
                <option value="admin">Admin</option>
                <option value="staff">Personal</option>
                <option value="patient">Patient</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Lösenord</label>
            <input asp-for="Password" class="form-control" type="password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">💾 Skapa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Avbryt</a>
    </form>
</div>
